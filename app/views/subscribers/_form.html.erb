<div class="span6 offset3 create_form">
  <h1>Welcome New Friend</h1>
  <%= form_for(@subscriber) do |f| %>
    <% if @subscriber.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h2>

        <ul>
        <% @subscriber.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h3>Personal Info</h3>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <h3>Payment Information</h3>

    <div class="field">
      <%= f.label :billing_address %><br>
      <%= f.text_field :billing_address %>
    </div>
    <div class="field">
      <%= f.label :billing_city %><br>
      <%= f.text_field :billing_city %>
    </div>
    <div class="field">
      <%= f.label :billing_state %><br>
      <%= f.text_field :billing_state %>
    </div>
    <div class="field">
      <%= f.label :billing_zip %><br>
      <%= f.text_field :billing_zip %>
    </div>
    <div class="field">
      <%= f.label :ship_date %><br>
      <%= f.date_select :ship_date %>
    </div>
    <div class="field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </div>

    <h3> Who will be recieving this Hug? </h3>

    <div class="field">
      <%= f.label :recipient_name %><br>
      <%= f.text_field :recipient_name %>
    </div>
    <div class="field">
      <%= f.label :recipient_address %><br>
      <%= f.text_field :recipient_address %>
    </div>
    <div class="field">
      <%= f.label :recipient_city %><br>
      <%= f.text_field :recipient_city %>
    </div>
    <div class="field">
      <%= f.label :recipient_state %><br>
      <%= f.text_field :recipient_state %>
    </div>
    <div class="field">
      <%= f.label :recipient_zip %><br>
      <%= f.text_field :recipient_zip %>
    </div>

    <h3>Stripe Information (will be sent to you in EMAIL)!</h3>

    <div class="field">
      <%= f.label :stripe_customer_id %><br>
      <%= f.text_field :stripe_customer_id %>
    </div>
    <div class="field">
      <%= f.label :payment_status %><br>
      <%= f.text_field :payment_status %>
    </div>

  <form action="" method="POST">
    <script
      src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
      data-key="pk_bGm2m7m1iQwdDpppL3b2sVdYPnW9Y"
      data-amount="2000"
      data-name="Demo Site"
      data-description="2 widgets ($20.00)"
      data-image="/128x128.png">
    </script>
    <br/>
    <br/>
    <%= link_to "Back", '/', class: 'btn btn-small' %>
  </form>
  <% end %>
</div>